{
  "manifest_version": 3,
  "name": "Meeting Cost Calculator",
  "version": "1.0",
  "description": "Shows the cost of Google Calendar meetings based on attendee hourly rates",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Meeting Cost Settings"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
